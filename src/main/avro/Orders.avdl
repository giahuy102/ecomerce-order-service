@namespace("com.ecomerce.ms.service")
protocol Orders {
	import idl "Metadatas.avdl";

	record OrderItem {
		@logicalType("UUID")
		string id;

		@logicalType("UUID")
		string productId;

		double price;
		int quantity;
	}

	record Order {
		@logicalType("UUID")
		string id;

		@logicalType("UUID")
		string customerId;

		string orderStatus;

		array<OrderItem> items;

	}

	record OrderCreatedEvent {
		Metadata metadata;
		Order order;
	}
}